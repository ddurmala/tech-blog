<h2 class="title is-4 m-5 p-3 has-text-centered">The Ultimate Digital Digest</h2>

<section>
    {{#if posts.length}}

    <h2 class="title is-5 m-5">All Blog Posts:</h2>


    <div class="columns is-multiline is-mobile">
        {{#each posts}}
        <div class="column is-one-quarter">
            <div class="box">
                <h5>{{title}}</h5>
                <p>{{content}} </p>
                <p>{{User.username}} </p>
                <p>Created on {{createdAt}} </p>
                <a href="#" class="button is-info is-rounded">Comment</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p>No blog posts available.</p>
    {{/if}}
</section>